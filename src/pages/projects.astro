<Layout title="Proyectos" description="Portafolio de proyectos de desarrollo web, análisis de datos y automatización de Pablo Martín Gatica.">
  <section class="section-padding">
    <div class="container mx-auto">
      <h1 class="text-4xl font-bold mb-6 text-center text-primary dark:text-accent">Mis Proyectos</h1>
      <p class="text-lg text-gray-700 dark:text-gray-300 max-w-3xl mx-auto text-center mb-12">
        Una selección de proyectos profesionales enfocados en análisis de datos, 
        desarrollo web y automatización que muestran mi experiencia técnica y capacidad para resolver problemas complejos.
      </p>
      
      <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
        {proyectos.map(proyecto => (
          <ProjectCard {...proyecto} />
        ))}
      </div>
    </div>
  </section>
  
  <section class="section-padding bg-gray-50 dark:bg-gray-800/50">
