---
// src/pages/en/about.astro - English About Page
import Layout from '../../layouts/Layout.astro';
import SkillBadge from '../../components/SkillBadge.astro';
import TimelineItem from '../../components/TimelineItem.astro';

// Personal data in English
const nombreDesarrollador = "Pablo Martín Gatica";
const perfilImageUrl = "https://placehold.co/400x400/3B82F6/FFFFFF?text=PG"; // Replace with real photo

// Technical skills list in English
const habilidadesTecnicas = [
  { 
    categoria: "Data Analysis & Processing", 
    skills: ["SQL (MySQL, PostgreSQL)", "Python", "Google Data Studio", "Report Automation", "Data Extraction", "ETL", "Dashboards"] 
  },
  { 
    categoria: "Web Development", 
    skills: ["JavaScript", "React", "Angular", "Bootstrap", "Django", "Flask", "Node.js", "Express"] 
  },
  { 
    categoria: "QA & Automation", 
    skills: ["Selenium", "Cypress", "FMEA/NPI", "Functional Testing", "Automated Testing", "Quality Control"] 
  },
  { 
    categoria: "Tools & Methodologies", 
    skills: ["Git", "Trello", "Jira", "Scrum", "Kanban", "Agile Methodologies"] 
  }
];

// Work experience in English
const experienciaLaboral = [
  {
    puesto: "QA Analyst (Motorola Mobile)",
    empresa: "Newsan",
    periodo: "Aug 2016 – Present",
    ubicacion: "Ushuaia, Argentina",
    descripcion: [
      "Data extraction and analysis using SQL for quality control reports",
      "Python script development for data processing and visualization",
      "Creation and maintenance of KPI dashboards in Google Data Studio",
      "Coordination of quality audits and preparation of executive reports",
      "Implementation of process improvements based on FMEA analysis"
    ]
  },
  {
    puesto: "Front-end Web Developer & QA Analyst",
    empresa: "Newsan",
    periodo: "Aug 2022 – Jan 2023",
    ubicacion: "Ushuaia, Argentina",
    descripcion: [
      "Web interface development with JavaScript, Angular and Bootstrap",
      "Implementation of automated tests with Selenium and Cypress",
      "Collaboration in agile teams using Git for version control",
      "QA process optimization through automation tool integration"
    ]
  },
  {
    puesto: "QC Inspector",
    empresa: "Newsan",
    periodo: "Aug 2012 – Jul 2016",
    ubicacion: "Ushuaia, Argentina",
    descripcion: [
      "Quality control in electronic product assembly",
      "Documentation of inspection processes and procedures",
      "Analysis of quality indicators and continuous improvement proposals"
    ]
  }
];

// Education and certifications in English
const educacionCertificaciones = [
  {
    tipo: "Education",
    items: [
      {
        titulo: "Bachelor's Degree in Systems",
        institucion: "Universidad Nacional de Tierra del Fuego (UNTDF)",
        periodo: "2019 – 2025",
        descripcion: "Training in software development, databases, systems analysis and artificial intelligence."
      },
      {
        titulo: "Electronics and Industrial Automation Technician",
        institucion: "EET N°8",
        periodo: "2000 – 2005",
        descripcion: "Specialization in electronic systems, automatic control and circuit analysis."
      }
    ]
  },
  {
    tipo: "Certifications",
    items: [
