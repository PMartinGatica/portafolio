      { titulo: "Introduction to .NET", institucion: "", año: "", descripcion: "Fundamentals of the .NET framework for application development." },
      { titulo: "Front End Development Diploma", institucion: "Newsan/UNTDF", año: "", descripcion: "Specialization in front-end development technologies such as HTML5, CSS3 and JavaScript." },
      { titulo: "Back End Development Diploma", institucion: "Newsan/UNTDF", año: "", descripcion: "Specialization in back-end development technologies, APIs and databases." }
    ]
  }
