---
// src/pages/en/index.astro - English Home Page
import Layout from '../../layouts/Layout.astro';
import ProjectCard from '../../components/ProjectCard.astro';
import SkillBadge from '../../components/SkillBadge.astro';

// English version data
const nombreDesarrollador = "Pablo Mart√≠n Gatica";
const tituloPrincipal = "Data Analyst - Software Developer";
const subtitulo = "Over 13 years in quality analysis with experience in SQL, Python and web development. Specialized in automation and data analysis for reports and dashboards.";
const perfilImageUrl = "https://placehold.co/400x400/3B82F6/FFFFFF?text=PG"; // Replace with your real photo

// Featured projects in English
const proyectosDestacados = [
  {
    title: "Comprehensive Quality System",
    description: "Centralized platform to monitor and manage all stages of the production process, rejections, and device repairs in real-time. Allows data query, custom report generation, metrics tracking, and document management.",
    imageUrl: "https://placehold.co/600x400/1E3A8A/FFFFFF?text=Quality+System",
    projectUrl: "https://sitecalidad.netlify.app/",
    repoUrl: "https://github.com/PMartinGatica/FE-NS.git",
    tags: ["React", "Django", "PostgreSQL", "Python", "Data Analysis", "Dashboards"],
  },
  {
    title: "Financial Tracking System",
    description: "Personal finance management application that allows recording expenses and income, visualizing monthly and annual balances, analyzing trends through interactive charts.",
    imageUrl: "https://placehold.co/600x400/047857/FFFFFF?text=Financial+Tracking",
    projectUrl: "https://pmg87.netlify.app/",
    repoUrl: "https://github.com/PMartinGatica/Finanzas",
    tags: ["React", "Chart.js", "Tailwind CSS", "Data Visualization"],
  },
];

// Key skills in English
const habilidadesPrincipales = [
    "SQL (MySQL, PostgreSQL)", "Python", "Google Data Studio", "Selenium", "Cypress", 
    "FMEA/NPI", "Git", "Trello", "Jira", "Scrum", "Kanban", "JavaScript", 
    "Angular", "Bootstrap", "Quality Control", "Data Analysis", 
];
---

<Layout 
  title="Home" 
  description={`Portfolio of ${nombreDesarrollador}, ${tituloPrincipal}. ${subtitulo}`}
>
  <section class="section-padding bg-gradient-to-br from-primary to-secondary text-light-text dark:from-gray-800 dark:to-gray-900">
    <div class="container mx-auto grid md:grid-cols-2 gap-12 items-center">
      <div class="animate-fade-in-up">
        <img 
          src={perfilImageUrl} 
          alt={`Profile photo of ${nombreDesarrollador}`} 
          class="rounded-full w-48 h-48 md:w-64 md:h-64 mx-auto md:mx-0 mb-6 border-4 border-accent shadow-xl object-cover"
          onerror="this.onerror=null;this.src='https://placehold.co/400x400/cccccc/333333?text=PG';"
        >
        <h1 class="text-4xl md:text-5xl font-bold mb-4 leading-tight">
          Hi, I'm <span class="text-accent">{nombreDesarrollador}</span>
        </h1>
        <h2 class="text-2xl md:text-3xl font-medium mb-6 text-gray-200 dark:text-gray-300">{tituloPrincipal}</h2>
        <p class="text-lg text-gray-300 dark:text-gray-400 mb-8">
          {subtitulo}
        </p>
        <div class="flex flex-col gap-4">
          <div class="text-center">
            <a href="/en/projects" class="inline-block px-6 py-2.5 bg-accent hover:bg-yellow-600 text-dark-text font-medium rounded-lg shadow-md transition-all duration-300 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:ring-opacity-50 text-lg text-center w-full sm:w-auto">View My Projects</a>
          </div>
          
          <!-- Contact information -->
          <div class="mt-4 flex flex-wrap justify-center gap-4">
            <a href="mailto:pablomartin.gatica@gmail.com" 
               class="flex items-center gap-3 px-5 py-3 bg-white/90 dark:bg-gray-800/90 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 hover:bg-white dark:hover:bg-gray-700 group">
              <div class="flex-shrink-0 w-9 h-9 rounded-full bg-accent/10 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-accent group-hover:text-accent/80" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <span class="text-gray-700 dark:text-gray-300 font-medium">Email</span>
            </a>
            
            <a href="https://www.linkedin.com/in/pablomartingatica/" 
               target="_blank" 
               rel="noopener noreferrer" 
               class="flex items-center gap-3 px-5 py-3 bg-white/90 dark:bg-gray-800/90 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 hover:bg-white dark:hover:bg-gray-700 group">
              <div class="flex-shrink-0 w-9 h-9 rounded-full bg-blue-500/10 flex items-center justify-center">
                <svg class="w-5 h-5 text-blue-600 dark:text-blue-400 group-hover:text-blue-500" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
                </svg>
              </div>
              <span class="text-gray-700 dark:text-gray-300 font-medium">LinkedIn</span>
            </a>
            
            <a href="https://github.com/PMartinGatica" 
               target="_blank" 
               rel="noopener noreferrer" 
               class="flex items-center gap-3 px-5 py-3 bg-white/90 dark:bg-gray-800/90 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 hover:bg-white dark:hover:bg-gray-700 group">
              <div class="flex-shrink-0 w-9 h-9 rounded-full bg-gray-800/10 dark:bg-white/10 flex items-center justify-center">
                <svg class="w-5 h-5 text-gray-800 dark:text-white group-hover:text-gray-700 dark:group-hover:text-gray-200" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.074 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.026 2.747-1.026.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.001 10.001 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                </svg>
              </div>
              <span class="text-gray-700 dark:text-gray-300 font-medium">GitHub</span>
            </a>
            
            <!-- WhatsApp button -->
            <a href="https://wa.me/542901502672" 
               target="_blank" 
               rel="noopener noreferrer" 
               class="flex items-center gap-3 px-5 py-3 bg-white/90 dark:bg-gray-800/90 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 hover:bg-white dark:hover:bg-gray-700 group">
              <div class="flex-shrink-0 w-9 h-9 rounded-full bg-green-500/10 flex items-center justify-center">
                <svg class="w-5 h-5 text-green-600 dark:text-green-400 group-hover:text-green-500" fill="currentColor" viewBox="0 0 24 24">
                  <path fill-rule="evenodd" d="M20.52 3.449C18.24 1.245 15.24 0 12.045 0 5.463 0 .104 5.334.101 11.893c0 2.096.549 4.14 1.595 5.945L0 24l6.335-1.652c1.746.943 3.71 1.444 5.71 1.447h.006c6.585 0 11.946-5.336 11.949-11.896 0-3.176-1.24-6.165-3.495-8.411zm-8.482 18.293h-.005c-1.779 0-3.53-.476-5.063-1.378l-.361-.215-3.749.982.999-3.648-.239-.375a9.803 9.803 0 01-1.506-5.22c.001-5.45 4.455-9.885 9.925-9.885 2.654 0 5.145 1.033 7.021 2.906 1.875 1.873 2.908 4.367 2.906 7.023-.002 5.447-4.456 9.885-9.928 9.885zm5.433-7.41c-.301-.149-1.775-.874-2.05-.974-.275-.1-.476-.149-.676.15-.2.298-.774.973-.948 1.172-.175.2-.349.223-.65.075-.301-.15-1.268-.466-2.428-1.484-.896-.795-1.5-1.78-1.676-2.079-.174-.298-.019-.46.132-.608.135-.133.3-.347.449-.52.149-.174.199-.298.299-.497.099-.198.05-.371-.025-.52-.075-.149-.676-1.612-.926-2.206-.243-.579-.49-.5-.674-.51-.174-.008-.375-.01-.575-.01-.2 0-.523.074-.798.372-.273.297-1.045 1.02-1.045 2.475 0 1.455 1.070 2.862 1.22 3.06.149.2 2.095 3.2 5.076 4.487.71.306 1.263.489 1.694.625.712.226 1.36.193 1.872.118.571-.085 1.758-.715 2.006-1.413.247-.697.247-1.294.173-1.418-.074-.124-.273-.198-.574-.347z" clip-rule="evenodd" />
                </svg>
              </div>
              <span class="text-gray-700 dark:text-gray-300 font-medium">WhatsApp</span>
            </a>
          </div>
        </div>
      </div>
      <div class="hidden md:block relative animate-fade-in-up" style="animation-delay: 0.2s;">
        <div class="absolute inset-0 bg-accent opacity-10 rounded-lg transform -rotate-3"></div>
        <img 
          src="/images/graph.png" 
          alt="Data analytics and development dashboard" 
          class="rounded-lg shadow-2xl relative z-10 transform rotate-1 hover:rotate-0 transition-transform duration-300 object-cover w-full"
          onerror="this.onerror=null;this.src='/images/fallback-image.png';"
        />
      </div>
    </div>
  </section>

  <section class="section-padding">
    <div class="container mx-auto text-center">
      <h2 class="text-3xl font-bold mb-3 text-primary dark:text-secondary">My Key Skills</h2>
      <p class="text-lg text-gray-600 dark:text-gray-400 mb-10 max-w-2xl mx-auto">
        Technologies and methodologies I've mastered throughout my professional experience in QA/QC and development.
      </p>
      <div class="flex flex-wrap justify-center gap-3 md:gap-4">
        {habilidadesPrincipales.map(skill => (
          <div class="animate-subtle-bounce">
            <SkillBadge skillName={skill} />
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section-padding bg-gray-50 dark:bg-gray-800/50">
    <div class="container mx-auto">
      <h2 class="text-3xl font-bold text-center mb-3 text-primary dark:text-secondary">Featured Projects</h2>
      <p class="text-lg text-gray-600 dark:text-gray-400 text-center mb-12 max-w-2xl mx-auto">
        A sample of my work in data analysis, automation and quality control.
      </p>
      <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
        {proyectosDestacados.map(proyecto => (
          <ProjectCard {...proyecto} />
        ))}
      </div>
      <div class="text-center mt-12">
        <a href="/en/projects" class="button-primary text-lg">View All Projects</a>
      </div>
    </div>
  </section>

  <section class="section-padding bg-primary dark:bg-secondary text-light-text">
    <div class="container mx-auto text-center">
      <h2 class="text-3xl font-bold mb-4">Looking for a professional with QA and development experience?</h2>
      <p class="text-lg mb-8 max-w-xl mx-auto text-gray-200 dark:text-gray-300">
        With over 13 years of experience in quality control and solid knowledge in web development, I can bring value to your team or project.
      </p>
      <a href="mailto:pablomartin.gatica@gmail.com" class="button-secondary text-lg px-10 py-4">Contact Me</a>
    </div>
  </section>
</Layout>